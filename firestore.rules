rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'lobbies' collection
    match /lobbies/{lobbyId} {
      // Allow any authenticated user to read lobby documents
      allow read: if request.auth != null;
      // Allow any authenticated user to create lobby documents
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Rules for the 'players' subcollection within 'lobbies'
    match /lobbies/{lobbyId}/players/{playerId} {
      // Allow any authenticated user to read any player document
      allow read: if request.auth != null;
      // Allow any authenticated user to update any player document
      allow update: if request.auth != null;
      // Allow any authenticated user to create a player document
      allow create: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Add rules for other collections if you have them
    // match /otherCollection/{document=**} {
    //   allow read, write: if <your_conditions>;
    // }
  }
}
